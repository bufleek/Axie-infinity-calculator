<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_floating_window">

    <ImageButton
        android:id="@+id/arena_close"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="SLP CALCULATOR"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:id="@+id/tv_slp_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/onSurface"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0+6+6+6+6+6+6" />

        <TextView
            android:id="@+id/tv_slp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/onSurface"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_slp_history"
            app:layout_constraintTop_toBottomOf="@+id/tv_slp_history"
            tools:text="30" />

        <TextView
            android:id="@+id/tv_slp_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+1"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_slp_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_slp" />

        <TextView
            android:id="@+id/tv_slp_3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+3"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_slp_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_slp_1"
            app:layout_constraintTop_toTopOf="@+id/tv_slp_1" />

        <TextView
            android:id="@+id/tv_slp_6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+6"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_slp_3"
            app:layout_constraintTop_toTopOf="@+id/tv_slp_1" />

        <TextView
            android:id="@+id/tv_slp_9"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="+9"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_slp_12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_slp_1" />

        <TextView
            android:id="@+id/tv_slp_12"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+12"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_slp_15"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_slp_9"
            app:layout_constraintTop_toTopOf="@+id/tv_slp_9" />

        <TextView
            android:id="@+id/tv_slp_15"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+15"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_slp_12"
            app:layout_constraintTop_toTopOf="@+id/tv_slp_12" />


        <TextView
            android:id="@+id/tv_slp_18"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="+18"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_slp_21"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_slp_9" />

        <TextView
            android:id="@+id/tv_slp_21"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+21"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_slp_24"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_slp_18"
            app:layout_constraintTop_toTopOf="@+id/tv_slp_18" />

        <TextView
            android:id="@+id/tv_slp_24"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+24"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_slp_21"
            app:layout_constraintTop_toTopOf="@+id/tv_slp_21" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_slp_reset"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingHorizontal="10dp"
        android:text="Reset"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_slp_undo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_slp_undo"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingHorizontal="10dp"
        android:text="Undo"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_slp_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_slp_reset" />

</androidx.constraintlayout.widget.ConstraintLayout>